<h2><%= style.name %></h2>


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Description</h5>
        <p class="card-text"><%= style.description %></p>
    </div>  
</div>


<h3>Beers:</h3>
<ul>
    <% style.beers.each do |beer| %>
        <li><%= link_to beer.name, beer %></li>
    <% end %>
</ul>

