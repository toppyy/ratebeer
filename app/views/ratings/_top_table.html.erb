<h3>Best <%= pluralize("", unit) %></h3>
<table class="table table-hover">
    <tr>
        <% [unit,"Average"].each do |attr|%>
        <th><%= attr %></th>
        <% end %>
    <tr>
    <% records.each do |record| %>
        <tr>
        <td><%= record.name %></td>
        <td><%= record.average_rating.round(2) %></td>
        </tr>
    <% end %>
</table>