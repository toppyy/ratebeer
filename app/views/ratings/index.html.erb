<h2>List of ratings</h2>

<p>Ratings: <%= @ratings.count %> </p>

<table class="table table-hover">
    <tr>
      <% ["Beer","Rating", "Rewier"].each do |attr|%>
        <th><%= attr %></th>
      <% end %>
    <tr>

    <% @ratings.each do |rating| %>
      <tr>
        <td><%= link_to rating.beer.name, rating.beer %> </td>
        <td><%= rating.score %></td>
        <td><%= link_to rating.user  %></td>
      </tr>
    <% end %>
</table>

<%= link_to "New rating", new_rating_path, class: "btn btn-success" %>